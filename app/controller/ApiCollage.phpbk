	function closeOrder(){
		$this->checklogin();
		$post = input('post.');
		$orderid = intval($post['orderid']);
		$order = Db::name('collage_order')->where('id',$orderid)->where('aid',constant('aid'))->where('mid',constant('mid'))->find();
		if(!$order || $order['status']!=0){
			return $this->json(['status'=>0,'msg'=>'关闭失败,订单状态错误']);
		}
		//加库存
		Db::name('collage_guige')->where('aid',constant('aid'))->where('id',$order['ggid'])->update(['stock'=>Db::raw("stock+".$order['num']),'sales'=>Db::raw("sales-".$order['num'])]);
		Db::name('collage_product')->where('aid',constant('aid'))->where('id',$order['proid'])->update(['stock'=>Db::raw("stock+".$order['num']),'sales'=>Db::raw("sales-".$order['num'])]);
		
		//优惠券抵扣的返还
		if($order['coupon_rid'] > 0){
			Db::name('coupon_record')->where('aid',constant('aid'))->where('mid',constant('mid'))->where('id',$order['coupon_rid'])->update(['status'=>0,'usetime'=>'']);
		}
		$rs = Db::name('collage_order')->where('id',$orderid)->where('aid',constant('aid'))->where('mid',constant('mid'))->update(['status'=>4]);
		return $this->json(['status'=>1,'msg'=>'操作成功']);
	}
	function delOrder(){
		$this->checklogin();
		$post = input('post.');
		$orderid = intval($post['orderid']);
		$order = Db::name('collage_order')->where('id',$orderid)->where('aid',constant('aid'))->where('mid',constant('mid'))->find();
		if(!$order || ($order['status']!=4 && $order['status']!=3)){
			return $this->json(['status'=>0,'msg'=>'删除失败,订单状态错误']);
		}
		if($order['status']==3){
			$rs = Db::name('collage_order')->where('id',$orderid)->where('aid',constant('aid'))->where('mid',constant('mid'))->update(['delete'=>1]);
		}else{
			$rs = Db::name('collage_order')->where('id',$orderid)->where('aid',constant('aid'))->where('mid',constant('mid'))->delete();
		}
		return $this->json(['status'=>1,'msg'=>'删除成功']);
	}
